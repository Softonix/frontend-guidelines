{
  "name": "softonix-guidelines-vite",
  "version": "2.1.0",
  "type": "module",
  "scripts": {
    "dev-only": "vite --host",
    "dev": "run-s dev-only",
    "build-only": "vite build",
    "build": "run-s type-check build-only",
    "preview": "vite preview",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "openapi-generate": "npx openapi-typescript https://fakerestapi.azurewebsites.net/swagger/v1/swagger.json -o ./src/api/types/schema.d.ts",
    "postinstall": "run-p openapi-generate"
  },
  "dependencies": {
    "pinia": "^2.1.7",
    "vue": "^3.4.31",
    "vue-router": "^4.4.0",
    "@vueuse/core": "^10.11.0",
    "axios": "^1.7.2",
    "element-plus": "^2.7.6",
    "portal-vue": "^3.0.0",
    "vue-i18n": "^9.13.1"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.27.0",
    "npm-run-all2": "^6.2.2",
    "typescript": "~5.5.3",
    "@rushstack/eslint-patch": "^1.10.3",
    "autoprefixer": "^10.4.19",
    "eslint-config-standard": "^17.1.0",
    "pathe": "^1.1.2",
    "postcss": "^8.4.39",
    "rollup-plugin-visualizer": "^5.12.0",
    "sass": "^1.77.6",
    "tailwindcss": "^3.4.4",
    "unplugin-auto-import": "^0.17.6",
    "unplugin-icons": "^0.19.0",
    "unplugin-vue-components": "^0.27.2",
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^20.14.9",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/tsconfig": "^0.5.1",
    "vite": "^5.3.3",
    "vue-tsc": "^2.0.26"
  }
}
